<?xml version="1.0" encoding="utf-8"?>
<com.example.sildemune.slidemunu.MySlidemenu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:slidemune="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.sildemune.MainActivity"
    android:id="@+id/myslidemune"
    slidemune:rightPadding="100dp">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="horizontal">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="#123654">

      </LinearLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="#985482"
          android:orientation="vertical">
          <Button
              android:id="@+id/btntoggle"
              android:layout_width="match_parent"
              android:layout_height="48dp"
              android:text="打开"
              android:gravity="center"/>


      </LinearLayout>
  </LinearLayout>
</com.example.sildemune.slidemunu.MySlidemenu>
